# Environment Variables Configuration
# Copy this file to .env for production or .env.dev for development

# OpenAI API Key - Required for question generation and image processing
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Stability AI API Key - Required for Stability AI image generation
# Get your API key from: https://platform.stability.ai/account/keys
STABILITY_API_KEY=your_stability_api_key_here

# AWS Configuration - Required for DynamoDB storage
# Get your credentials from AWS Console: https://console.aws.amazon.com/iam/
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
DYNAMODB_TABLE_NAME=questions

# Redis Configuration - Required for question set queue management
# Default values for local Redis instance
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Optional: Environment settings
NODE_ENV=production
DEBUG=false
NUM_QUESTIONS=20